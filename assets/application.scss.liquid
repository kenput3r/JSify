  }
}
/**************************************************
Filters Drawer
**************************************************/
#FiltersDrawer, #FiltersColumn {
  -webkit-overflow-scrolling: touch;
  h5 {
    border-top: 1px solid #e2dede;
    margin-left: 10px;
    margin-right: 10px;
    padding-top: 10px;
  }

  ul.colors {
    li {
      background-color: transparent !important;
      &.black{@include color_drop($black);}
      &.blue{@include color_drop($blue);}
      &.brown{@include color_drop($brown);}
      &.burgundy{@include color_drop($burgundy);}
      &.cream{@include color_drop($cream);}
      &.green{@include color_drop($green);}
      &.grey{@include color_drop($grey);}
      &.orange{@include color_drop($orange);}
      &.pink{@include color_drop($pink);}
      &.purple{@include color_drop($purple);}
      &.red{@include color_drop($red);}
      &.white{@include color_drop($white);}
      &.yellow{@include color_drop($yellow);}
      a {
        border-bottom: 4px solid #f5f5f5;
        height: auto;
        line-height: 14px;
        text-align: center;
        padding: 5px;
        &:hover {
          background-color: transparent !important;
        }
        i {
          background-color: transparent !important;
          float: none;
          margin: auto;
        }
      }
    }
  }
}
#FiltersColumn {
  position: relative;
  .inner-wrapper {
    @media screen and(min-width: $large) {
      padding-bottom: 20px;
    }
  }
  h5.first-of-type {
    margin-top: 5px;
  }
  ul.colors {
    li {
      float: left;
    }
  }
  li {
    float: none;
    line-height: 48px;

    a {
      color: rgba(0,0,0,0.87);
      display: block;
      font-size: 14px;
      font-weight: 500;
      height: 48px;
      line-height: 48px;
      padding: 0 32px;
      &:hover {
        background-color: rgba(0,0,0,0.05);
      }
      i {
        float: left;
        height: 48px;
        line-height: 48px;
        margin: 0 32px 0 0;
        width: 24px;
        color: rgba(0,0,0,0.54);
      }
    }
  }
  #FiltersDrawer {
    padding-bottom: 125px;
  }
}

.sidenav {
  li:not(.active) {
    a, .collapsible-header {
      &:hover {
        @media screen and(max-width: $medium){
          background-color: rgba(255,255,255,1);
        }
      }
    }
  }
}


/**************************************************
Footer
**************************************************/
.footer-nav {
  @media screen and(min-width: $large) {
    padding-top: 20px;
  }
  &.row {
    background-color: #fff;
    color: #000;
    margin-bottom: 0;
  }
  .col {
    @media screen and(max-width: $small) {
      margin-bottom: 10px;
    }
  }
  a {
    color: #000;
    display: inline-block;
    padding: 0 10px;
