/**************************************************
Mobile Nav
**************************************************/
.mobile-nav-container {
  -webkit-transition: all 300ms ease;
  transition: all 300ms ease;
}
.fixed-bottom {
  bottom: 0;
  position: fixed;
  width: 100%;
  z-index: 1001;
}
#MobileNav {
  .col {
    a {
      width: 100%;
    }
  }
  .sidenav-trigger {
    margin: 0;
  }
