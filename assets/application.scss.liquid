@mixin color_drop($color) {
  &:hover {
    a {
      border-bottom: 4px solid $color;
    }
  }
  i {
    color: $color;
  }
}

@mixin transition($prop, $type, $speed) {
  -webkit-transition: $prop, $type, $speed;
  transition: $prop, $type, $speed;
}

@mixin transform($translation, $dimensions) {
  -webkit-transform: $translation($dimensions);
  transform: $translation($dimensions);
}

