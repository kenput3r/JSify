  padding-bottom: 125px;
  -webkit-overflow-scrolling: touch;
  z-index: 1000;
  .input-field {
    overflow: hidden;
  }
  .label-icon {
    margin-top: -8px;
    padding-left: 5px;
  }
  input[type="search"] {
    border-bottom: 0;
    margin-left: 35px;
  }
