/**************************************************
Collection Template Carousel
**************************************************/
#CollectionTemplateCarousel {
  border-bottom: 2px solid #f1f1f1;
  margin-bottom: 15px;
  margin-top: -15px;
  @media screen and(min-width: $large) {
    max-height: 400px;
    .heading-wrapper {
      padding-left: 90px;
      padding-right: 90px;
    }
    .carousel-item {
      .alignment-container {
        width: 100%;
        height: 100%;
      }
      img {
        position: absolute;
        &.top {
          top: 0;
          left: 0;
        }
        &.middle {
          top:50%;
          left: 50%;
          transform: translate(-50%, -50%);
        }
        &.bottom {
          bottom: 0;
          left: 0;
        }
      }
    }
  }
  .alignment-container {
    position: relative;
    img {
      min-width: 100%;
    }
  }
  .heading-wrapper {
    color: #fff;
    position: absolute;
    text-shadow: 0 0 2px #000;
    width: 100%;
    z-index: 1;
    @media screen and(max-width: $small) {
      padding: 0 10px 10px 10px;
    }
    &.top {
      top: 0;
      left: 0;
    }
    &.middle {
      margin-top: 0;
      top:50%;
      left: 50%;
      transform: translate(-50%, -50%);
    }
    &.bottom {
      bottom: 0;
      left: 0;
      padding-bottom: 62px;
    }
    h2 {
      font-weight: 400 !important;
      width: 100%;
      @media screen and(min-width: $medium) {
        font-size: 32px;
      }
    }
  }
  .carousel-fixed-item {
    bottom: 40%;
    @media screen and(max-width: $medium) {
      display: none;
    }
    .left-trigger {
      float: left;
      :hover {
        cursor: pointer;
      }
    }
    .right-trigger {
      float: right;
      :hover {
        cursor: pointer;
      }
    }
  }
}

/**************************************************
Contact Pages
**************************************************/
.contact-form {
  .card-action {
    border-top: 0;
  }
}
.flex-middle {
  display:inline-flex; 
  vertical-align: middle; 
  margin-bottom: 10px !important;
