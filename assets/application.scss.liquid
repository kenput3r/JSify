  padding-top: 10px;
  img {
    max-height: 64px;
  }
}
//vendor overrides
body.premiumblends, body.firmeclub, body.suavecitospeed {
  #MobileHeader {
    img {
      filter: invert(1);
    }
  }
}
#MobileBrandCarousel {
  height: 100px;
  .carousel-item {
    text-align: center;
    height: auto;
    min-height: 0;
    &.active {
      .action {
        opacity: 1;
      }
    }
  }
  img {
    max-height: 64px;
    width: auto;
    &.darken {
      filter: invert(1);
      -webkit-filter: invert(1);
    }
