/**************************************************
Order
**************************************************/
.summary-sticky {
  .collapsible {
    border: 0 !important;
    box-shadow: none;
    -webkit-box-shadow: none;
  }
  .collapsible-header {
    border-bottom: 0;
  }
}
/**************************************************
Parallax
**************************************************/
.parallax-container {
  @media screen and(min-width: $large) {
    height: 900px;
  }
}

.css-parallax {
  background-attachment: fixed;
  background-size: cover;
  background-position: center;
  height: 900px;
  padding-top: 86px;

  @media screen and(max-width: 992px) {
    height: 500px;
  }

  @media screen and(max-width: $medium) {
    background-attachment: scroll;
  }
}

.css-parallax-details {
  font-weight: bold;
  position: sticky;
  position: -webkit-sticky;
  top: 86px;
  
  h3, p {
    text-shadow: #000 0px 0px 10px;
  }

  p {
    font-size: 1.5rem;
  }
}
/**************************************************
Product Carousel
**************************************************/
.product-carousel {
  @media screen and(max-width: $small) {
    margin-bottom: 0;
  }
  .carousel-image {
    &:hover {
      cursor: zoom-in;
    }
  }

  .thumbnails {
    img {
      &:hover {
        cursor: pointer;
      }
    }
  }

  .modal[style] {
    max-height: 85%;
    min-height: 50%;
    top: 8% !important;
    width: 60%;
  }
  .modal-image {
    img {
      width: 100%;

      &.preview {
        filter: blur(2vw);
      }
    }
  }
}

#ProductImageModal[style] {
  max-height: 85%;
  min-height: 50%;
  top: 8% !important;
  width: 60%;
}
.modal-image {
  img {
    width: 100%;

    &.preview {
      filter: blur(2vw);
    }
  }
}

/**************************************************
Product Drawer
**************************************************/
#ProductDrawer {
  width: 60%;
  -webkit-overflow-scrolling: touch;

  .close-drawer {
    color: #fff;
    height: auto;
    margin-right: 5px;
    padding: 0;
  }

  h1 {
    font-size: 3.2em;
    margin: 0;
  }
  @media screen and(max-width: 992px) {
