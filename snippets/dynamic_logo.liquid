{% if template.name == 'collection' %}
  {% if collection.handle contains 'suavecita' or collection.handle contains 'beauty' or collection.handle contains 'women' %}
    {% assign setting_id = 'SuavecitaLogo' %} 
  {% elsif collection.handle contains 'premium-blends' %}
    {% assign setting_id = 'PremiumBlendsLogo' %}
  {% elsif collection.handle contains 'firme-club' %}
    {% assign setting_id = 'FirmeClubLogo' %}
  {% elsif collection.handle contains 'suavecito-speed' %}
    {% assign setting_id = 'SpeedShopLogo' %}
  {% elsif collection.handle contains 'tres-noir' %}
    {% assign setting_id = 'TresNoirLogo' %}
  {% elsif collection.handle contains 'cerveza-cito' %}
    {% assign setting_id = 'CervezaCitoLogo' %}
  {% else %}
   {% assign setting_id = 'SuavecitoLogo' %}
  {% endif %}
{% elsif template.name == 'product' %}
  {% if product.vendor == 'Suavecita' %}
    {% assign setting_id = 'SuavecitaLogo' %}
  {% elsif product.vendor == 'Premium Blends' %}
   {% assign setting_id = 'PremiumBlendsLogo' %}
  {% elsif product.vendor == 'Firme Club' %}
    {% assign setting_id = 'FirmeClubLogo' %}
  {% elsif product.vendor == 'Suavecito Speed' %}
    {% assign setting_id = 'SpeedShopLogo' %}
  {% elsif product.vendor == 'Tres Noir' %}
    {% assign setting_id = 'TresNoirLogo' %}
  {% elsif product.vendor == 'Cerveza Cito' %}
    {% assign setting_id = 'CervezaCitoLogo' %}
  {% else %}
    {% assign setting_id = 'SuavecitoLogo' %}
  {% endif %}
{% else %}
  {% if template.suffix == 'suavecita' %}
    {% assign setting_id = 'SuavecitaLogo' %}
  {% elsif template.suffix == 'premiumblends' %}
    {% assign setting_id = 'PremiumBlendsLogo' %}
  {% elsif template.suffix == 'firmeclub' %}
    {% assign setting_id = 'FirmeClubLogo' %}
  {% elsif template.suffix == 'suavecitospeed' %}
    {% assign setting_id = 'SpeedShopLogo' %}
  {% elsif template.suffix == 'tresnoir' %}
    {% assign setting_id = 'TresNoirLogo' %}
  {% elsif template.suffix == 'cervezacito' %}
    {% assign setting_id = 'CervezaCitoLogo' %}
  {% else %}
    {% assign setting_id = 'SuavecitoLogo' %}
  {% endif %}
{% endif %}

{% if settings[setting_id] %}
  {{ settings[setting_id].src | img_tag: settings[setting_id].alt, 'logo', 'medium' }}
{% else %}
  {{ settings['SuavecitoLogo'].src | img_tag: 'Suavecito Script Logo', 'logo', 'medium' }}
{% endif %}