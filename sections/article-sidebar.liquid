<div class="row">
  {% if section.settings.featuredCollection != empty %}
    <div class="col s12">
      <h3>{{section.settings.sidebarTitle}}</h3>
    </div>
    {% for product in collections[section.settings.featuredCollection].products limit: 12 %}
      {% assign remainder = forloop.index | modulo: 3 %}
      {% if remainder == 0 %}
        {% assign grid_sizes = 's12' %}
      {% else %}
        {% assign grid_sizes = 's6' %}
      {% endif %}
      {% include 'ProductTileLifestyle' %}
    {% endfor %}
  {% endif %}
</div>
  {% schema %}
  {
    "name": "Article Sidebar",
    "settings": [
      {
        "id": "featuredCollection",
        "type": "collection",
        "label": "Featured Collection"
      },
      {
        "id": "sidebarTitle",
        "type": "text",
        "label": "Sidebar Title",
        "default": "New Stuff"
      }
    ]
  }
  {% endschema %}