{% if section.settings.BannerMessageEnabled %}
<div id="HomepageBanner" 
style="background-color:{{section.settings.BannerMessageBackgroundColor}};
  color:{{section.settings.BannerMessageFontColor}};">
  <p style="text-align:center; margin-top:0; margin-bottom: 0;border-bottom:2px solid {{section.settings.BannerMessageBackgroundColor}}">
    {{section.settings.BannerMessage}}
    {% if section.settings.BannerMessageLink %}
      <br>
      <a href="{{section.settings.BannerMessageLink}}">VIEW HERE</a>
    {% endif %}
  </p>
</div>
<style>
  {{ section.settings.CustomCSS }}
</style>
{% endif %}

{% schema %}
  {
    "name": "Homepage Banner",
    "settings": [
      {
        "type": "text",
        "id": "BannerMessage",
        "label": "Banner Message"
      },
      {
        "type": "url",
        "id": "BannerMessageLink",
        "label": "Message Link"
      },
      {
        "type": "color",
        "id": "BannerMessageBackgroundColor",
        "label": "Banner Background Color",
        "default": "#FFFFFF"
      },
      {
        "type": "color",
        "id": "BannerMessageFontColor",
        "label": "Banner Font Color",
        "default": "#000"
      },
      {
        "type": "checkbox",
        "id": "BannerMessageEnabled",
        "label": "Banner Message Enabled"
      },
      {
        "id": "CustomCSS",
        "type": "textarea",
        "label": "Custom CSS",
        "info": "Add custom css here"
      }
    ],
    "presets": [
      {
        "name": "Homepage Banner",
        "category": "Banners"
      }
    ]
  }
{% endschema %}